<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F0"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_gravity="start"
            android:contentDescription="Back"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/profileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <!-- Profile Picture -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profile_placeholder"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"
                android:contentDescription="Profile Image"/>

            <ImageView
                android:id="@+id/cameraIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_camera"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp"
                android:background="@drawable/circle_button"
                android:padding="4dp"
                android:contentDescription="Change Photo"/>
        </FrameLayout>

        <!-- Name Field -->
        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Name"
            android:text="Melissa Peters"
            android:background="@drawable/text_background"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <!-- Email Field -->
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Email"
            android:text="melpeters@gmail.com"
            android:background="@drawable/text_background"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="16dp"/>

        <!-- Password Field -->
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Password"
            android:text="***********"
            android:background="@drawable/text_background"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:layout_marginBottom="16dp"/>

        <!-- Date of Birth Field -->
        <EditText
            android:id="@+id/dobEditText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Date of Birth"
            android:text="23/05/1995"
            android:background="@drawable/text_background"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:focusable="false"
            android:layout_marginBottom="16dp"/>

        <!-- Country/Region Field -->
        <EditText
            android:id="@+id/countryEditText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Country/Region"
            android:text="South Africa"
            android:background="@drawable/text_background"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:focusable="false"
            android:layout_marginBottom="24dp"/>

        <!-- Save Changes Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="#F25C91"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_button"/>

    </LinearLayout>
</ScrollView>
