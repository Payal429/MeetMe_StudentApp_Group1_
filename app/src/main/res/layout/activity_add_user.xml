<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@color/ivory">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back_arrow"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Add New User"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

        <!-- ID Number -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Number"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edtIDNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID Number"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

        <!-- Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

        <!-- Surname -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surname"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/edtSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Surname"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

        <!-- Type of User -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type of User "
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"/>

<!--        <Spinner-->
<!--            android:id="@+id/spnUser"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="50dp"-->
<!--            android:text="Student"-->
<!--            android:spinnerMode="dropdown"-->
<!--            android:autofillHints="kkf"-->
<!--            android:entries="@array/user_type"-->
<!--            android:background="@drawable/edit_text_background" />-->

            <EditText
                android:id="@+id/edtUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Student"
                android:enabled="false"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginTop="8dp" />
        <!-- Select Course -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select The Course â–¼"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"/>

        <Spinner
            android:id="@+id/spnCourse"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_background"
            android:spinnerMode="dropdown"
            android:entries="@array/courses"
            />

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="example@gmail.com"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:inputType="textEmailAddress" />

        <!-- Confirmation Message -->
<!--        <TextView-->
<!--            android:id="@+id/confirmationMessage"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="New user has been added to database"-->
<!--            android:textSize="14sp"-->
<!--            android:textColor="@color/black"-->
<!--            android:layout_marginTop="16dp"-->
<!--            android:gravity="center_horizontal" />-->

        <!-- Add New User Button -->
        <Button
            android:id="@+id/addStudentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add User"
            app:cornerRadius="8dp"
            android:textSize="24sp"
            android:backgroundTint="#EA4C89"
            android:textColor="@color/black"
            android:layout_marginTop="24dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>