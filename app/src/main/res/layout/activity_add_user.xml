<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@color/ivory">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back_arrow"/>

            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Add New User"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- ID Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Number"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edtIDNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_background"
                android:hint="ID Number"
                android:singleLine="true"
                android:textSize="18sp"
                android:padding="12dp" />

            <!-- Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_background"
                android:hint="Name"
                android:textSize="18sp"
                android:singleLine="true"
                android:padding="12dp" />

            <!-- Surname -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Surname"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edtSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_background"
                android:hint="Surname"
                android:singleLine="true"
                android:textSize="18sp"
                android:padding="12dp" />

            <!-- Type of User -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Type of User "
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="gone"/>

            <!--        <Spinner-->
            <!--            android:id="@+id/spnUser"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="50dp"-->
            <!--            android:text="Student"-->
            <!--            android:spinnerMode="dropdown"-->
            <!--            android:autofillHints="kkf"-->
            <!--            android:entries="@array/user_type"-->
            <!--            android:background="@drawable/edit_text_background" />-->

            <EditText
                android:id="@+id/edtUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_background"
                android:enabled="false"
                android:hint="Student"
                android:padding="12dp"
                android:textSize="18sp"
                android:visibility="gone"
                />
            <!-- Select Course -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Select The Course â–¼"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spnCourse"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_background"
                android:entries="@array/courses"
                android:textSize="18sp"
                android:spinnerMode="dropdown" />

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_background"
                android:hint="example@gmail.com"
                android:singleLine="true"
                android:textSize="18sp"
                android:inputType="textEmailAddress"
                android:padding="12dp" />

            <!-- Confirmation Message -->
            <!--        <TextView-->
            <!--            android:id="@+id/confirmationMessage"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:text="New user has been added to database"-->
            <!--            android:textSize="14sp"-->
            <!--            android:textColor="@color/black"-->
            <!--            android:layout_marginTop="16dp"-->
            <!--            android:gravity="center_horizontal" />-->

            <!-- Add New User Button -->
            <Button
                android:id="@+id/addStudentButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="#EA4C89"
                app:cornerRadius="8dp"
                android:textColor="@color/black"
                android:text="Add User"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>